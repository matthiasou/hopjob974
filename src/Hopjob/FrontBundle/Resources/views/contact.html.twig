{% extends 'FrontBundle::layout.html.twig' %}
{% block body %}
<br><br><br>
    <h1 style="text-align: center"> Formulaire de contact</h1>
    <br>
{{ form_start(form, {'attr': {'class': 'fos_user_registration_register form col-sm-4 col-sm-offset-4 col-xs-12'}}) }}

    <div class="form-group">
    {{ form_widget(form.theme, { 'attr': {'class': 'form-control'} }) }}
    {{ form_errors(form.theme) }}
</div>
<div class="form-group">
    {{ form_widget(form.subject, { 'attr': {'class': 'form-control'} }) }}
    {{ form_errors(form.subject) }}
</div>
<div class="form-group">
    {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}
    {{ form_errors(form.nom) }}
</div>
<div class="form-group">
    {{ form_widget(form.prenom, { 'attr': {'class': 'form-control'} }) }}
    {{ form_errors(form.prenom) }}
</div>
<div class="form-group">
    {{ form_widget(form.phone, { 'attr': {'class': 'form-control'} }) }}
    {{ form_errors(form.phone) }}
</div>
<div class="form-group">
    {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
    {{ form_errors(form.email) }}
</div>
<div class="form-group">
    {{ form_widget(form.message, { 'attr': {'class': 'form-control'} }) }}
    {{ form_errors(form.message) }}
</div>

{# Render CSRF token etc .#}
<div style="display:none">
    {{ form_rest(form) }}
</div>

<input class="btn btn-info col-sm-4 col-sm-offset-4 col-xs-12" type="submit" value="Envoyer">

{{ form_end(form) }}

{% endblock %}
